<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgeGrp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="466dp"
        android:layout_height="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/giftideas" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="254dp"
        android:layout_height="85dp"
        android:src="@drawable/agegrp"
        app:layout_constraintBottom_toTopOf="@+id/ageGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/ageGroup"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="341dp"
        android:layout_height="79dp"
        android:layout_marginTop="476dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/infant"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Infant"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/adolescent"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Adolescent"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/adult"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Adult"
            android:textAlignment="center" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>